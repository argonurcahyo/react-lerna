{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/lib",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@cf/*": ["src/cf/*"],
      "@cms/*": ["src/cms/*"],
      "@helpers/*": ["src/helpers/*"],
      "@interfaces/*": ["src/interfaces/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "build/types",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "rollup*",
    "src/setupTests.ts",
    "src/**/__tests__"
  ]
}
